package org. system  ; 

import java.time.LocalDate;

public class Appointment {
    
	private String aid;
	private Patient patient;
    private org.system.doctor doctor;
    private LocalDate date;
    
   
    
    public Appointment(String aid,Patient patient, org.system.doctor doctor, LocalDate date) throws InvalidAppointmentException {
        if (date.isBefore(LocalDate.now())) {
            throw new InvalidAppointmentException("Cannot book appointment in the past.");
        }
        this.aid=aid;
        this.patient = patient;
        this.doctor = doctor;
        this.date = date;
    }

    public void displaySummary() {
        System.out.println("--- Appointment Summary ---");
        
        patient.getDetails();
        doctor.getDetails();
        System.out.println("Date: " + date);
        System.out.println("Estimated Bill: â‚¹" + patient.generateBill());
    }

	public String getAid() {
		return aid;
	}

	public void setAid(String aid) {
		this.aid = aid;
	}

	public Patient getPatient() {
		return patient;
	}

	public void setPatient(Patient patient) {
		this.patient = patient;
	}

	public org.system.doctor getDoctor() {
		return doctor;
	}

	public void setDoctor(org.system.doctor doctor) {
		this.doctor = doctor;
	}

	public LocalDate getDate() {
		return date;
	}

	public void setDate(LocalDate date) {
		this.date = date;
	}

	

}
